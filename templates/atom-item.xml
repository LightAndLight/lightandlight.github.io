<entry>
    <title>$title$</title>
    <link href="$root$$url$" />
    $if(feed_id)$
    <id>$feed_id$</id>
    $else$
    <id>$root$$url$</id>
    $endif$
    <published>$published$</published>
    <updated>$updated$</updated>
    $if(is_post)$
    <summary type="html" xml:base="$root$$url$"><![CDATA[$description$]]></summary>
    $endif$
    $if(body)$
    <content type="html" xml:base="$root$$url$"><![CDATA[
      $if(is_reply)$
      $for(references)$
      <p>Reply to <a href="$url$">$title$</a></p>
      $endfor$
      <hr>
      $endif$
      $body$
    ]]></content>
    $endif$
</entry>
